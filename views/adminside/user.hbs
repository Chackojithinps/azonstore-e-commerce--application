<!--================Table =================-->

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Responsive Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        {{!-- <th scope="col">Last Name</th> --}}
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each userData}}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{this.name}}</td>

                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.status}}</td>
                        {{#if status}}
                        <td><a href="blockUser?id={{_id}}"><button class="block-button">Block</button></a></td>
                        {{else}}
                        <td><a href="unblockUser?id={{_id}}"><button class="unblock-button">Unblock</button></a></td>
                        {{/if}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--================Table end =================-->

</div>
<!-- Content End -->


<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>