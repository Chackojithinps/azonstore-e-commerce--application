<div class="row mt-5">
    <a href="/addProducts" class="btn btn-success product-btn ml-auto">Add product</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list" id="myTable">
                        <thead>
                            <tr>
                                <th><span>Image</span></th>
                                <th><span>Product Name</span></th>
                                <th><span>Brand</span></th>
                                <th><span>category</span></th>
                                <th><span>Price</span></th>
                                <th><span>Quantity</span></th>
                                <th><span>Actions</span></th>


                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                             {{!-- {{#each category}} --}}
                            <tr>
                                <td>
                                    <img src="http://res.cloudinary.com/dmuikdem0/image/upload/v1684072203/{{image.[0]}}.jpg" alt="">
                                </td>
                                <td>
                                    {{this.name}}
                                </td>
                               
                                <td class="text-center">
                                    <span class="label label-default">{{this.bname}}</span>
                                </td>
                                <td class="text-center">
                                    <span class="label label-default">{{category.name}}</span>
                                </td>
                                <td>
                                    <span class="label label-default">{{this.price}}</span>

                                </td>
                                <td class="text-center">
                                    <span class="label label-default">{{this.quantity}}</span>
                                </td>
                                <td style="width: 20%;">
                                    
                                    <a href="editProduct?id={{this._id}}" class="table-link ms-5" >
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>

                                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                    {{#if status}}
                                    <a href="delProduct?id={{this._id}}" class="table-link danger">
                                        <span class="fa-stack">
                                            <i class="fa fa-square fa-stack-2x"></i>
                                            <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>

                                    {{else}}
                                    <a href="showProduct?id={{this._id}}" class="table-link">
                                        <span class="fa-stack">
                                             <i class="fa fa-square fa-stack-2x" style="color: #78e421;"></i>
                                            <i class="fa fa-eye fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                    {{/if}}
                                </td>

                            </tr>
                            {{!-- {{/each}} --}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{!-- <ul class="pagination pull-right">
                    <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
                </ul> --}}
            </div>
        </div>
    </div>
</div>
</div>
<!-- Content End -->


<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>

<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>