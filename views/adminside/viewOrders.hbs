<!-- Sales Chart Start -->

<div class="container-fluid pt-4 px-4 ">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="mb-0 text-primary" >User</h5>
            </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Name:  {{name}}</h6>
                   
                </div> <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Id:  {{_id}}</h6>
                   
                </div> <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">email:  {{email}}</h6>
                   
                </div> <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">phone:  {{phone}}</h6>
                   
                </div>
                {{!-- <canvas id="worldwide-sales"></canvas> --}}
                
            </div>
             
        </div>
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="mb-0 text-primary">Delivery Address</h5>
                   
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">{{address.firstname}} {{address.lastname}}, {{address.street}}, {{address.city}},
                        {{address.state}},{{address.country}}
                    </h6> 
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">{{address.pincode}}
                    </h6>  
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">{{address.email}}
                    </h6>  
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">{{address.phone}}
                    </h6>  
                </div>
                
                {{!-- <canvas id="salse-revenue"></canvas> --}}
            </div>
        </div>
    </div>
</div>
<!-- Sales Chart End -->

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list">
                        <thead>
                            <tr>
                                <th><span>Image</span></th>
                                <th><span>Product Name</span></th>
                                <th><span>Brand</span></th>
                                <th><span>Price</span></th>
                                <th><span>Quantity</span></th>
                           


                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                           <tr>
                                <td>
                                    <img src="http://res.cloudinary.com/dmuikdem0/image/upload/v1684072203/{{image.[0]}}.jpg" alt="">
                                </td>
                                <td>
                                    {{this.name}}
                                </td>
                               
                                <td class="text-center">
                                    <span class="label label-default">{{this.brand}}</span>
                                </td>
                                <td>
                                    <span class="label label-default">{{this.price}}</span>

                                </td>
                                <td class="text-center">
                                    <span class="label label-default">{{this.quantity}}</span>
                                </td>
                             

                            </tr>
                            {{/each}}
                            
                         </tbody>
                    </table>
                </div>
               
            </div>
        </div>
    </div>
{{!-- </div> --}}

<!-- Content End -->
